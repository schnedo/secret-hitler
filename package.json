{
  "name": "secret-hitler",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://schnedo.github.io/secret-hitler",
  "dependencies": {
    "@reduxjs/toolkit": "1.6.1",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "13.2.1",
    "@types/jest": "27.0.1",
    "@types/node": "14.17.14",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/styled-components": "5.1.13",
    "husky": "7.0.2",
    "jest-styled-components": "7.0.5",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.4",
    "react-scripts": "4.0.3",
    "styled-components": "5.3.1",
    "svgo": "2.5.0",
    "typescript": "4.4.2",
    "web-vitals": "2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0 && prettier --check src && tsc",
    "export": "npm run build && mv build/* docs",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "dependency-cruiser": "^10.0.6"
  }
}
