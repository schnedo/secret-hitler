{
  "name": "secret-hitler",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://schnedo.github.io/secret-hitler",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "npm run lint:eslint && npm run lint:format && npm run lint:types && npm run lint:architecture",
    "lint:eslint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:format": "prettier --check src",
    "lint:types": "tsc",
    "lint:architecture": "dependency-cruise --config .dependency-cruiser.js src",
    "export": "npm run build && mv build/* docs",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.8.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "8.0.1",
    "styled-components": "5.3.5",
    "web-vitals": "2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.31",
    "@types/react": "17.0.44",
    "@types/react-dom": "18.0.2",
    "@types/styled-components": "5.1.25",
    "dependency-cruiser": "11.6.0",
    "husky": "7.0.4",
    "jest-styled-components": "7.0.8",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "react-scripts": "5.0.1",
    "svgo": "2.8.0",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
