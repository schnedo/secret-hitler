{
  "name": "secret-hitler",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://schnedo.github.io/secret-hitler",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "npm run lint:eslint && npm run lint:format && npm run lint:types && npm run lint:architecture",
    "lint:eslint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:format": "prettier --check src",
    "lint:types": "tsc",
    "lint:architecture": "dependency-cruise --config .dependency-cruiser.js src",
    "export": "npm run build && mv build/* docs",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.8.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.0.4",
    "styled-components": "5.3.6",
    "web-vitals": "3.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.1.1",
    "@types/jest": "29.0.3",
    "@types/node": "16.11.62",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/styled-components": "5.1.26",
    "dependency-cruiser": "11.16.1",
    "husky": "8.0.1",
    "jest-styled-components": "7.1.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "react-scripts": "5.0.1",
    "svgo": "2.8.0",
    "typescript": "4.8.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
