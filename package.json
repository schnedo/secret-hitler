{
  "name": "secret-hitler",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://schnedo.github.io/secret-hitler",
  "dependencies": {
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/user-event": "13.1.3",
    "@types/jest": "26.0.22",
    "@types/node": "12.20.7",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-jss": "10.6.0",
    "react-scripts": "4.0.3",
    "svgo": "2.3.0",
    "typescript": "4.2.4",
    "web-vitals": "1.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0 && prettier --check src",
    "export": "npm run build && mv build/* docs",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
